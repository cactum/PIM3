@model List<FuncionarioModel>

@{
    ViewData["Title"] = "Pesquisar:";
}

<div class="container">
    <main role="main" class="pb-3">
        <section class="main-container">
            <div class="welcome-container">
                <h1 class="welcome-message">Resultado da pesquisa:</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nome</th>
                            <th scope="col">CPF</th>
                            <th scope="col">Data de Nascimento</th>
                            <th scope="col">Telefone</th>
                            <th scope="col">Gênero</th>
                            <th scope="col">Endereço</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            @foreach (FuncionarioModel funcionario in Model)
                            {
                                <tr>
                                    <th scope="row">@funcionario.Id</th>
                                    <td>@funcionario.Nome</td>
                                    <td>@funcionario.CPF</td>
                                    <td>@funcionario.NascData</td>
                                    <td>@funcionario.Telefone</td>
                                    <td>@funcionario.Genero</td>
                                    <td>@funcionario.Endereco</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a role="button" class="btn btn-primary" asp-route-id="@funcionario.Id" asp-controller="Gerenciar" asp-action="Editar">Editar</a>
                                            <a role="button" class="btn btn-danger" asp-route-id="@funcionario.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">Nenhum funcionário encontrado.</td>
                            </tr>
                        }
                    </tbody>

                </table>
                <div class="text-center">
                    <a class="btn btn-primary" asp-controller="Gerenciar" asp-action="Index">Voltar</a>
                </div>
            </div>
        </section>
    </main>
</div>
