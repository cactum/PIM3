@model FuncionarioModel
@{
    ViewData["Title"] = "Pesquisar:";
}

<div class="container">
    <main role="main" class="pb-3">
        <section class="main-container">
            <div class="welcome-container">
                <h1 class="welcome-message">Resultado da pesquisa:</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nome</th>
                            <th scope="col">CPF</th>
                            <th scope="col">Data de Nascimento</th>
                            <th scope="col">Telefone</th>
                            <th scope="col">Gênero</th>
                            <th scope="col">Endereço</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            <tr>
                                <th scope="row">@Model.Id</th>
                                <td>@Model.Nome</td>
                                <td>@Model.CPF</td>
                                <td>@Model.NascData</td>
                                <td>@Model.Telefone</td>
                                <td>@Model.Genero</td>
                                <td>@Model.Endereco</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a role="button" class="btn btn-primary" asp-route-id="@Model.Id" asp-controller="Gerenciar" asp-action="Editar">Editar</a>
                                        <a role="button" class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                                    </div>
                                </td>
                            </tr>
                        }                                              
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</div>
