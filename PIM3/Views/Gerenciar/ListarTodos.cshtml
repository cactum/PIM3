@model List<FuncionarioModel>
@{
    ViewData["Title"] = "Lista de Funcionários";
}

<section class="main-container">
    <div class="welcome-container">
        <h2 class="welcome-message">Lista de Funcionários</h2>

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                @TempData["MensagemSucesso"]

            </div>
        }
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                Alerta de erro!
                @TempData["MensagemErro"]
            </div>
        }

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Data de Nascimento</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Genero</th>
                    <th scope="col">Endereço</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (FuncionarioModel funcionario in Model)
                    {
                        <tr>
                            <th scope="row">@funcionario.Id</th>
                            <td>@funcionario.Nome</td>
                            <td>@funcionario.CPF</td>
                            <td>@funcionario.NascData</td>
                            <td>@funcionario.Telefone</td>
                            <td>@funcionario.Genero</td>
                            <td>@funcionario.Endereco</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-primary" asp-route-id="@funcionario.Id" asp-controller="Gerenciar" asp-action="Editar">Editar</a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@funcionario.Id" asp-controller="Gerenciar" asp-action="ApagarConfirmacao">Apagar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-primary" asp-controller="Gerenciar" asp-action="Index">Voltar</a>
        </div>
    </div>
</section>
