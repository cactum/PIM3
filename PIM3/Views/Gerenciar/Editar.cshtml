@model FuncionarioModel
@{
    ViewData["Title"] = "Editar";
}

<div class="container">
    <main role="main" class="pb-3">
        <section class="main-container">
            <div class="welcome-container">
                <h1 class="welcome-message">Editar Cadastro</h1>

                <form asp-controller="Gerenciar" asp-action="Alterar" method="post">

                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
                    </div>

                    <div class="form-group">
                        <label for="cpf">Nome</label>
                        <input type="text" asp-for="CPF" class="form-control" placeholder="Digite o CPF">
                    </div>

                    <div class="form-group">
                        <label for="dataNasc">Data de Nascimento</label>
                        <input type="date" asp-for="NascData" class="form-control" placeholder="Digite a data de nascimento">
                    </div>

                    <div class="form-group">
                        <label for="genero">Gênero</label>
                        <select class="form-control" asp-for="Genero" required>
                            <option value="" selected>Gênero</option>
                            <option value="M">Masculino</option>
                            <option value="F">Feminino</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="tel">Telefone</label>
                        <input type="tel" asp-for="Telefone" class="form-control" placeholder="Digite o telefone">
                    </div>

                    <div class="form-group">
                        <label for="endereco">Endereço</label>
                        <input type="text" asp-for="Endereco" class="form-control" placeholder="Digite o endereço">
                    </div>

                    <br />
                    <button type="submit" class="btn btn-primary">Alterar</button>
                    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
                </form>


               
            </div>
        </section>
    </main>
</div>
